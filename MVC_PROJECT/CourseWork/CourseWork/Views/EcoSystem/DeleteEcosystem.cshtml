@model CourseWork.Models.DetachmentViewModels
@{
    ViewBag.Title = "Удаление экосистемы";
}
<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("DeleteEcosystem", "EcoSystem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Удалите существующую экосистему.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Detachment_name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Detachment_name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Удалить" style="background-color: rgba(26, 94, 113, 0.83);color:white" />
            <p class="btn btn-default">@Html.ActionLink("Назад", "Index", "EcoSystem")</p>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



