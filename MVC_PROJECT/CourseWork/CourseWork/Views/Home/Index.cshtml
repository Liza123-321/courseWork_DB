@{
    ViewBag.Title = "Home Page";
}
<link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/chocolat.css")" rel="stylesheet" type="text/css" />
