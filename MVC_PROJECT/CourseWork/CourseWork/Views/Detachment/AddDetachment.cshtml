@model CourseWork.Models.DetachmentViewModels
@{
    ViewBag.Title = "Создание отряда";
}
<h2>@ViewBag.Title.</h2>
@if (TempData["message"] != null)
{
    <div class="alert alert-danger">@TempData["message"]</div>
}
@using (Html.BeginForm("AddDetachment", "Detachment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Создайте новый отряд.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Detachment_name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Detachment_name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Создать" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
